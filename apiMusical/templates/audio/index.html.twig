{% extends 'layout.html.twig' %}

{% block title %}Audio index{% endblock %}

{% block contenido %}
    <h2 class="mb-4">Audios</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Descripcion</th>
                <th>Tipo</th>
                <th>Enlace</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
